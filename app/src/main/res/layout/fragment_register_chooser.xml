<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.other.RegisterChooserFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginBottom="20dp"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="2"
                android:gravity="start"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:src="@drawable/ic_back"
                    android:id="@+id/btnBack"
                    android:textColor="@color/colorWhite"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="6"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:text="Register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:id="@+id/btnCustomer"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/my_button"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:textColor="@color/colorWhite"
                android:text="Customer account"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Looking for help ?"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_customer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/btnExpert"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/my_button"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:textColor="@color/colorWhite"
                android:text="Computer expert account"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Looking for job ?"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_expert"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>