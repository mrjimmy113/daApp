<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingBottom="10dp"
    android:background="@drawable/dialog_outline"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="Request Estimate"
        android:textSize="25sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/edt_text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_clock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/spnHour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Hour"
                android:drawablePadding="10dp"
                android:layout_marginVertical="5dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:id="@+id/spnMinute"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Minute"
                android:drawablePadding="10dp"
                android:layout_marginVertical="5dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
        <TextView
            android:drawableStart="@drawable/ic_attach_money_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edt_text_box"
            android:id="@+id/txtTotal"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total payment"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:visibility="invisible"
        android:id="@+id/txtError"
        android:textColor="@color/colorDanger"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Please specify your estimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnYes"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:text="OK"
                android:background="@drawable/my_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnNo"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:text="Cancel"
                android:background="@drawable/my_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>